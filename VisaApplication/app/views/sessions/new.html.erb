<!-- app/views/sessions/new.html.erb -->

<div class="login-container">
  <h2 class="text-center mb-4">Login</h2>

  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control', required: true %>
    </div>

    <%= button_tag 'Login', class: 'btn btn-login btn-block' %>
  <% end %>

  <p class="forgot-password text-center">
    <%= link_to 'Forgot Password?', '#' %>
  </p>
  <p class="sign-up text-center">
    Don't have an account? <%= link_to 'Sign Up', signup_path %>
  </p>
</div>
